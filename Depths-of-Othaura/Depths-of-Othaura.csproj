<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <RootNamespace>Depths_of_Othaura</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="GoRogue" Version="2.6.4" />
    <PackageReference Include="MonoGame.Framework.DesktopGL" Version="3.8.2.1105" />
    <PackageReference Include="SadConsole.GoRogueHelpers" Version="1.0.1" />
    <PackageReference Include="SadConsole.Host.MonoGame" Version="10.5.0" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Data\Assets\" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Data\Assets\_othauraTest_32x32.font">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Data\Assets\_othauraTest_32x32.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Data\World\Configuration\tiles.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Using Include="SadRogue.Primitives" />
  </ItemGroup>

</Project>
